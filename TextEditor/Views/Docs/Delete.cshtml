@model TextEditor.Models.Doc

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<!-- Confirmation message asking the user to confirm the deletion -->
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Doc</h4>
    <hr />

    <!-- Definition list to display the document details -->
    <dl class="row">
        <!-- Display the Title label and value -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <!-- Display the Content label and value -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Content)  <!-- Use Html.Raw to render the raw HTML content of the document -->
        </dd>

        <!-- Display the User label and value -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>

    <!-- Form for deleting the document -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /> <!-- Hidden field to hold the document ID -->
        <input type="submit" value="Delete" class="btn btn-danger" /> <!-- Button to submit the form and delete the document -->
        |
        <a class="btn btn-primary" asp-action="Index">Back to List</a> <!-- Link to navigate back to the list of documents -->
    </form>
</div>
